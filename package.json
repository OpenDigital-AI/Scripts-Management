{
  "name": "logondemo-cloudbase",
  "version": "1.0.0",
  "description": "Login Demo with Electron, Vue, and Tencent Cloudbase",
  "main": "electron/main.js",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "electron:dev": "concurrently \"npm run dev\" \"wait-on http://localhost:5173 && electron .\"",
    "electron:build": "npm run build && electron-builder",
    "postinstall": "electron-builder install-app-deps",
    "verify": "node verify-setup.js"
  },
  "keywords": [
    "electron",
    "vue",
    "cloudbase",
    "tencent"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@vitejs/plugin-vue": "^5.0.0",
    "concurrently": "^8.2.2",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "vite": "^5.0.0",
    "wait-on": "^7.2.0"
  },
  "dependencies": {
    "@cloudbase/js-sdk": "^1.7.3",
    "vue": "^3.4.0",
    "vue-router": "^4.2.5"
  },
  "build": {
    "appId": "com.opendigital.logondemo",
    "productName": "Logon Demo",
    "directories": {
      "output": "dist-electron"
    },
    "files": [
      "dist/**/*",
      "electron/**/*"
    ],
    "mac": {
      "category": "public.app-category.utilities",
      "target": ["dmg"]
    },
    "win": {
      "target": ["nsis"]
    },
    "linux": {
      "target": ["AppImage"],
      "category": "Utility"
    }
  }
}
